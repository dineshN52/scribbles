<Window x:Class="scribbles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scribbles"
        mc:Ignorable="d"
        Title="scribble" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="25" MaxHeight="25"/>
            <RowDefinition MinHeight="425"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="DarkCyan">
            <Menu MinHeight="20" Background="DarkCyan">
                <MenuItem Header="_File" Margin="3">
                    <MenuItem Header="_New" Click="NewWindow_Click"/>
                    <MenuItem Header="Open" Click="OpenFile_Click"/>
                    <MenuItem Header="Save" Click="Save_Click"/>
                    <MenuItem Header="Save As">
                        <MenuItem Header="TEXT File" Click="SaveAsTxt_Click" />
                        <MenuItem Header="BINARY file" Click="SaveAsBin_Click"/>
                        <MenuItem Header="ConvertBinTxt" Click="MenuItem_Click"/>
                    </MenuItem>
                    <Separator />
                    <MenuItem Header="Exit"  Click="Exit_Click"/>
                </MenuItem>
            </Menu>
            <Button Background="DarkCyan" Click="EraseButton_Click">
                <Image Source="C:\dineshn\Pictures\Erase.png"/>
            </Button>
            <Button x:Name="undo" Background="DarkCyan" Width="25" >
                <Image Source="C:\dineshn\Pictures\undo.png"/>
            </Button>
            <Button x:Name="redo" Background="DarkCyan" Width="25">
                <Image Source="C:\dineshn\Pictures\redo.png"/>
            </Button>
        </StackPanel>
        <local:MyCanvas  Grid.Row="1" x:Name="canvas" Background="White"/>
    </Grid>
</Window>
